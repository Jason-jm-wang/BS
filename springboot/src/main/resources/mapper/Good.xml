<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.springboot.Mapper.GoodsMapper">

    <!-- 插入商品信息 -->
    <insert id="insertGood">
        insert into good(name, price, description, image, category, platform, url)
        values(#{name}, #{price}, #{description}, #{image}, #{category}, #{platform}, #{url})
    </insert>

    <!-- 更新商品信息 -->
    <update id="updateGood">
        update good
        set name = #{name},
            price = #{price},
            description = #{description},
            image = #{image},
            category = #{category},
            platform = #{platform},
            url = #{url}
        where id = #{id}
    </update>

    <!-- 根据商品 ID 查询 -->
    <select id="selectGoodById" resultType="com.example.springboot.entity.Good">
        select * from good where id = #{id}
    </select>

    <!-- 查询所有商品 -->
    <select id="selectAllGoods" resultType="com.example.springboot.entity.Good">
        select * from good
    </select>

    <!-- 根据商品名称模糊搜索 -->
    <select id="selectGoodsByName" resultType="com.example.springboot.entity.Good">
        select * from good
        <where>
            <if test="s != null and s != ''">
                name like concat('%', #{s}, '%')
            </if>
        </where>
    </select>

    <!-- 根据商品分类查询 -->
    <select id="selectGoodsByCategory" resultType="com.example.springboot.entity.Good">
        select * from good
        <where>
            <if test="category != null and category != ''">
                category = #{category}
            </if>
        </where>
    </select>

    <!-- 删除商品 -->
    <delete id="deleteGoodById">
        delete from good where id = #{id}
    </delete>

</mapper>
